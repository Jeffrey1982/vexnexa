# ── VexNexa – Environment Configuration (.env.example)
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ============================================================================
# REQUIRED - Database Configuration
# ============================================================================
# Get these from your Supabase project settings → Database
DATABASE_URL="postgresql://user:password@host:port/database?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://user:password@host:port/database"

# ============================================================================
# REQUIRED - Supabase Configuration
# ============================================================================
# Get these from your Supabase project settings → API
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# ============================================================================
# REQUIRED - Email Configuration (Resend)
# ============================================================================
# Sign up at https://resend.com and create an API key
RESEND_API_KEY="re_your_resend_api_key_here"

# ============================================================================
# REQUIRED - Payment Processing (Mollie)
# ============================================================================
# Get these from https://www.mollie.com/dashboard/developers
# Use test_xxx keys for development, live_xxx for production
MOLLIE_API_KEY="live_your_mollie_api_key_here"

# Webhook secret for verifying Mollie webhook requests
# Generate: openssl rand -base64 32
MOLLIE_WEBHOOK_SECRET="your_webhook_secret_here"

# ============================================================================
# REQUIRED - Scheduled Tasks (Cron Jobs)
# ============================================================================
# Token for authenticating cron job requests (X-CRON-TOKEN header)
# Generate: openssl rand -base64 32
CRON_TOKEN="your_secure_cron_token_here"

# ============================================================================
# REQUIRED - Application URLs
# ============================================================================
# Your application's public URL (no trailing slash)
NEXT_PUBLIC_APP_URL="https://vexnexa.com"
NEXT_PUBLIC_SITE_URL="https://vexnexa.com"

# Support email for billing and customer service
BILLING_SUPPORT_EMAIL="support@vexnexa.com"

# ============================================================================
# REQUIRED - Google Analytics 4 & SEO Health Monitoring
# ============================================================================
# Get your measurement ID from Google Analytics 4 → Admin → Data Streams
NEXT_PUBLIC_GA4_MEASUREMENT_ID="G-XXXXXXXXXX"

# GA4 Property ID (numeric, from GA4 Admin → Property Settings)
GA4_PROPERTY_ID="123456789"

# Google Service Account for API access
# Get from Google Cloud Console → IAM & Admin → Service Accounts
GOOGLE_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# Google Search Console site URL (must be verified in GSC)
GSC_SITE_URL="sc-domain:yourdomain.com"

# ============================================================================
# REQUIRED - AI Blog Translation & Formatting
# ============================================================================
# Anthropic API key for Claude Sonnet 4 blog translation
# Get from https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-api03-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"

# Admin token for protected endpoints (blog migration, etc.)
# Generate: openssl rand -base64 32
ADMIN_TOKEN="your_secure_admin_token_here"

# ============================================================================
# OPTIONAL - Development/Testing
# ============================================================================
# Email for development user (only used in development)
DEV_USER_EMAIL="dev@vexnexa.local"

# Default site URL for database seeding
SEED_SITE_URL="https://example.com/"